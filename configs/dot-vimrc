"common settings
set tabstop=4
set shiftwidth=4
set expandtab
set paste
set number
set nocompatible
set ignorecase
set smartcase
set incsearch

syntax on
filetype on
filetype plugin indent on

"flake8 while saving file
"need https://github.com/nvie/vim-flake8 plugin for this to work
autocmd BufWritePost *.py call Flake8()

"mvim / gvim config
if has("gui_running")
    colorscheme koehler "lately, black is my favorite color
    set guifont=Monaco:h12.50 "I just love this font
    set guioptions-=m  "remove menu bar
    set guioptions-=T  "remove toolbar
    set guioptions-=r  "remove right-hand scroll bar
endif

" ;)
